{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"],
      "#assets/*": ["src/assets/*"],
      "#components/*": ["src/components/*"],
      "#constants/*": ["src/constants/*"],
      "#graphql/*": ["src/graphql/*"],
      "#providers/*": ["src/providers/*"],
      "#redux/*": ["src/redux/*"],
      "#router/*": ["src/router/*"],
      "#theme/*": ["src/theme/*"],
      "#types/*": ["src/types/*"],
      "#utils/*": ["src/utils/*"],
      "#views/*": ["src/views/*"],
    }
  },
  "include": [
    ".eslintrc.cjs",
    "env.d.ts",
    "capacitor.config.ts",
    "vite.config.ts",
    "src"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
